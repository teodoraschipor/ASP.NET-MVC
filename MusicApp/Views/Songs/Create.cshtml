@model MusicApp.Models.Song
@{
    ViewBag.Title = "Create";
}

<style>
    body {
        background-color: #0c0c0c;
    }
</style>
<span style="COLOR: white">
    <h2>ADD NEW SONG</h2>

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.Title, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ArtistName, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBoxFor(x => x.ArtistName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ArtistName, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.Album, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DropDownListFor(x => x.AlbumId, (SelectList)ViewBag.Albums, "-Select an album-", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.AlbumId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Purchased, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBoxFor(x => x.Purchased, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Purchased, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-6 col-md-9">
                    <input type="submit" value="Add" class="btn btn-success" />
                </div>
            </div>

        </div>
    }
</span>